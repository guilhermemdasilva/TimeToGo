<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context=".HomeActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:text="@string/workhoursStr"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/workhours_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:text="00:00"
                    android:background="@drawable/roundedbutton"
                    android:onClick="showTimePickerDialog" />
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/camerawork_btn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:visibility="gone"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:text="@string/entranceStr"/>
            <Button
                android:id="@+id/entrance_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:text="00:00"
                android:background="@drawable/roundedbutton"
                android:onClick="showTimePickerDialog" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="100dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:text="@string/timeGoOut"/>
            <com.romainpiel.shimmer.ShimmerTextView
                android:id="@+id/timeToGo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="100sp"
                android:text="00:00"
                android:textStyle="bold"
                android:textColor="@color/brightorange"
                app:reflectionColor="@color/grey"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/toggleDayNightBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="toggleDayNight"
                android:background="@drawable/ic_launcher"
                android:layout_gravity="end"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
